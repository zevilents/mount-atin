local Players = game:GetService("Players")
local PathfindingService = game:GetService("PathfindingService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

if playerGui:FindFirstChild("PathGUI") then
	playerGui.PathGUI:Destroy()
end

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PathGUI"
screenGui.Parent = playerGui

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 220, 0, 50)
button.Position = UDim2.new(0.5, -110, 0.2, 0)
button.Text = "Jalan: POS 2 ‚Üí POS 3"
button.BackgroundColor3 = Color3.fromRGB(70, 130, 255)
button.TextColor3 = Color3.new(1, 1, 1)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 18
button.Parent = screenGui

-- Lokasi
local pos2 = Vector3.new(-184, 128, 408)
local pos3 = Vector3.new(-166, 229, 652)

local function goTo(position)
	local char = player.Character or player.CharacterAdded:Wait()
	local humanoid = char:WaitForChild("Humanoid")
	local hrp = char:WaitForChild("HumanoidRootPart")

	-- Hitung path
	local path = PathfindingService:CreatePath({
		AgentRadius = 2,
		AgentHeight = 5,
		AgentCanJump = true,
		AgentJumpHeight = 10,
		AgentMaxSlope = 45,
	})
	path:ComputeAsync(hrp.Position, position)

	if path.Status == Enum.PathStatus.Complete then
		print("‚úÖ Path ditemukan, jumlah waypoint:", #path:GetWaypoints())
		for _, waypoint in ipairs(path:GetWaypoints()) do
			print("‚û°Ô∏è Menuju waypoint:", waypoint.Position)
			humanoid:MoveTo(waypoint.Position)
			humanoid.MoveToFinished:Wait()

			if waypoint.Action == Enum.PathWaypointAction.Jump then
				print("üîº Lompat di waypoint")
				humanoid.Jump = true
			end
		end
	else
		warn("‚ùå Path gagal dihitung! Dari:", hrp.Position, "‚Üí", position)
	end
end

button.MouseButton1Click:Connect(function()
	local char = player.Character or player.CharacterAdded:Wait()
	local hrp = char:WaitForChild("HumanoidRootPart")

	-- Teleport ke POS 2
	hrp.CFrame = CFrame.new(pos2)
	task.wait(1.5)

	-- Coba jalan ke POS 3
	goTo(pos3)
end)
